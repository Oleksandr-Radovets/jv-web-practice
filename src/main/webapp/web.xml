<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.controller.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>mate.controller.RegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registerDriver</servlet-name>
        <servlet-class>mate.controller.DriverRegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registerDriver</servlet-name>
        <url-pattern>/registration/drivers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>carService</servlet-name>
        <servlet-class>mate.controller.CarRegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>carService</servlet-name>
        <url-pattern>/registration/cars</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addCar</servlet-name>
        <servlet-class>mate.controller.AddCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addCar</servlet-name>
        <url-pattern>/registration/cars/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addDriverToCar</servlet-name>
        <servlet-class>mate.controller.AddDriverToCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addDriverToCar</servlet-name>
        <url-pattern>/registration/cars/plus</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>allCar</servlet-name>
        <servlet-class>mate.controller.DisplayAllCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allCar</servlet-name>
        <url-pattern>/registration/cars/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteCar</servlet-name>
        <servlet-class>mate.controller.DeleteCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteCar</servlet-name>
        <url-pattern>/registration/cars/all/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>manufacturerService</servlet-name>
        <servlet-class>mate.controller.ManufacturerRegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>manufacturerService</servlet-name>
        <url-pattern>/registration/manufacturers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addManufacturer</servlet-name>
        <servlet-class>mate.controller.AddManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addManufacturer</servlet-name>
        <url-pattern>/registration/manufacturers/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>displayAllManufacturer</servlet-name>
        <servlet-class>mate.controller.DisplayAllManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>displayAllManufacturer</servlet-name>
        <url-pattern>/registration/manufacturers/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteManufacturer</servlet-name>
        <servlet-class>mate.controller.DeleteManufacturerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteManufacturer</servlet-name>
        <url-pattern>/registration/manufacturers/all/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addDriver</servlet-name>
        <servlet-class>mate.controller.AddDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addDriver</servlet-name>
        <url-pattern>/registration/drivers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>displayAllDriver</servlet-name>
        <servlet-class>mate.controller.DisplayAllDriversController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>displayAllDriver</servlet-name>
        <url-pattern>/registration/drivers/all</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteDriver</servlet-name>
        <servlet-class>mate.controller.DeleteDriverController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteDriver</servlet-name>
        <url-pattern>/registration/drivers/all/delete</url-pattern>
    </servlet-mapping>

</web-app>
